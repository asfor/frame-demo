{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "preserve",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist"
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false,
    "emitRequireType": false
  },
  "files": ["./src/index.tsx"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}